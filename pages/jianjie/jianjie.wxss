/*========================
        标题样式
  ========================*/
.main-title {
  display: inline-flex;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  padding: 0 0.5rem;
  margin-top: 1rem;
  font-size: 1.6em;
  font-weight: bold;
  line-height: 1.6;
  color: #ff890a;
  /* background: url("//odwbo6hwu.bkt.clouddn.com/title-bg.jpg") no-repeat 0 0 / 100% 100%; */
}

 .main-title .top{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  display: block;
  background: #ff890a;
}

 .main-title .top::before{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
   transform: translateY(-30%); 
  display: block;
} 

 .main-title .top::after{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  top: 0;
  right: 0;
   transform: translateY(-30%); 
  display: block;
} 

.main-title .bottom{
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  display: block;
  background: #ff890a;
}

 .main-title .bottom::before{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
   transform: translateY(30%); 
  display: block;
} 

 .main-title .bottom::after{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  bottom: 0;
  right: 0;
   transform: translateY(30%); 
  display: block;
}  


/*========================
        时间轴样式
  ========================*/
.timeline {
  padding-left: 8%;
  padding-right: 5%;
  margin-top: 1.6rem;
}

.timeline-item {
  position: relative;
  padding-left: 1rem;
  padding-bottom: 1.2rem;
  border-left: 1px solid #ffab0a;
  color: #90581a;
  line-height: 1.4;
}

.timeline-item::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  transform: translateX(-52%);
  display: block;
  width: 0.8rem;
  height: 0.8rem;
  padding: 2px;
  border: 1px solid #ffab0a; 
  border-radius: 1rem;
  background-color: #ffab0a;
  background-clip: content-box;
}
.timeline-item:last-child{
  border-left: none;
}
.timeline-item view {
  color: #ff890a;
  font-weight: bold;
  line-height: 1.2;
}


/*===================
      切换效果
  ===================*/
.switch {
  margin-top: 1.6rem;
}
.switch-tab {
  display: flex;
}
.switch-tab view{
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1ece7;
  color: #737373;
  line-height: 2;
}
.switch-tab .switch-tab-active{
  background: #ffab0a;
  color: #ffffff;
  font-weight: bold;
  font-family: "微软雅黑", sans-serif;
}

.switch-item{
  display:none;
}
.switch-item-active{
    display: flex;
  justify-content: space-around;
  font-size: 0.8rem;
  padding: 0 .4rem;
}

/*==================
    医生切换
  ==================*/
.doctor .switch-item view{
  width: 45%;
  background: #f1ece7;
  margin: .8rem 0;
  padding: 0;
  border: 1px solid #ddd;
}
.doctor .switch-item view image{
  width: 100%;
  font-size: 0;
}
.doctor .switch-item view text{
  display: block;
  padding-left: 5px;
  color: #535353;
}

/*===================
      技术切换
  ===================*/
.jishu {
  margin-top: 1.6rem;
}
.jishu .switch-item{
  padding: 0.5rem;
}
.jishu .switch-item image{
  float: left;
  width: 50%;
  padding-right: 0.6rem;
}
.jishu .switch-item view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.8;
}
/*=================
    中间的banner
  =================*/
.middle-banner {
  margin-top: 1rem;
  margin-bottom: 0.5rem;
}
.middle-banner image {
  width: 100%;
}
/*==================
      公益事业
  ==================*/
.gongyi {
  margin-top: 1rem;
  padding: 0 .4rem 1rem;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.gongyi view{
  box-sizing: border-box;
  flex-flow: 1;
  flex-shrink: 0;
  flex-basis: 100px;
  min-width: 50%;
  padding: 0 .4rem;
  margin-top: 1rem;
}
.gongyi view image{
  width: 100%;
}
.gongyi view text{
  display: flex;
  justify-content: center;
  font-size: 14px;
  color: #3b3936;
  font-family: "微软雅黑",sans-serif;
}