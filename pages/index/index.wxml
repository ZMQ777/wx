<!--index.wxml-->
<view class='title-search'>

    <view class="page__bd">
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索商品" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
            </view>
            <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>
    </view>
</view>

<view class='banner-div'>
  <image src='../../images/banner.jpg'></image>
</view>

  <view class="page__bd">
          <view class="">
              <block wx:for="{{grids}}" wx:key="*this">
                  <navigator url="{{item.url}}" class="bar_div" hover-class="">
                      <image class="img" src="{{item.src}}" /> 
                  </navigator>
              </block>
          </view>
  </view>

  <view class='footer-div'>
    <image src='../../images/footer.jpg'></image>
  </view>