.title{
  border-bottom: 1px solid #dddddd;
  padding-left: 0.8rem;
  padding-bottom: 0.1rem;
  margin-top: 2rem;
}
.title text {
  border-left: 2px solid #ff890a;
  color: #ff890a;
  font-size: 1.2rem;
  padding-left: 0.5rem;
}

/*===================
      切换效果
  ===================*/
.switch {
  margin-top: 0.3rem;
}
.switch-tab {
  display: flex;
  width: 22.5%;
  float: left;
  margin-left: 2%;
  margin-top: 0.5rem;
}
.switch-tab view{
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background: #f1ece7; */
  color: #888887;
  line-height: 2;
  border: 1px solid #ffab0a;
}
.switch-tab .switch-tab-active{
  background: #ffab0a;
  color: #ffffff;
  font-weight: bold;
  font-family: "微软雅黑", sans-serif;
}
.switch-item{
  display:none;
}
.switch-item-active{
    display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  font-size: 0.8rem;
  padding: 0 2%;
}
.switch-item-banner{
  margin-top: 0.8rem;
  width: 100%;
}
.switch-item-info {
  margin-top: 0.8rem;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  color: #888887;
  line-height: 1.8rem;
  font-size: 0.9rem;
}
.switch-item-info .switch-item-info-left{
  display: block;
  border: 1px solid #d3d1d0;
  padding: 0 0.4rem;
  margin-right: 0.5rem;
   min-width: 3.6rem; 
  max-height: 1.7rem;
  float: left;
  font-size: 0.9rem;
}
.switch-item-info .switch-item-info-right{
  display: block;
  float: left;
  font-size: 0.9rem;
}
.switch-item-by{
  margin-top: 0.8rem;
  width: 100%;
  display: flex;
  
}
.switch-item-by-title {
  float: left;
   display: flex;
  justify-content: center;
  align-items: center; 
  min-height: 4rem;
  writing-mode: vertical-rl;
  width: 10%;
  background: #ffab0a;
  font-family: "微软雅黑",sans-serif;
  font-size: 1rem;
  color: white;
}
.switch-item-by image{
  width: 43%;
  float: left;
  margin-left: 2%;
}

.middle-banner image {
  width: 100%;
  margin-top: 1rem;
}