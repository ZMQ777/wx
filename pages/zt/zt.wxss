/* pages/pifu/pifu.wxss */

.pifu_bar_nav{
width: 100%;

}
.pifu_bar_div{
  width: 46%;
  float: left;
  position: relative;
  box-sizing: border-box;
  margin: 2%;
  margin-bottom: 10px;
  border: 1px solid #f1ece7;
}
.pifu_bar_div .img{
  width: 100%;
}
.buy{
  width: 100%;
  height: 100%;
  background-color: #f1ece7;
  margin-top: -8px;
  position: relative;
}
.display_inline{
  display: inline-block;
  color: #535353;
}
.money{
  padding: 15px 0 15px 0;
  font-size: 0.8rem;
  margin-left: 2px;
}
.parse{
  font-size:0.85rem; 
}
.discount_price{
  font-size: 0.6rem;
  margin-left: 2px;
  text-decoration:line-through;
}
.qg{
  position: absolute;
  right: 5px;
  font-size: 0.8rem;
  padding: 2px;
  background-color: white;
  box-sizing: border-box;
  color: #ff890a;
  top: 50%;
  margin-top: -12px;
}