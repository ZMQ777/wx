@import 'static/style/weui.wxss';

page {
  /* background-color: #F8F8F8; */
  background-color: ffffff;
  font-size: 16px;
  min-height: 100%;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.clearfix::after {
  content: "";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

/*搜索框提示词样式*/

.font-color {
  color: #d97f0a;
  font-size: 12px;
}

/*搜索框样式*/

.title-search {
  height: 100%;
  width: 100%;
  background-color: rgb(255, 171, 10);
  margin-bottom: 0px;
}

.title-search .weui-search-bar {
  background-color: rgb(255, 171, 10);
  border-top: 1rpx solid rgb(255, 171, 10);
  border-bottom: 1rpx solid rgb(255, 171, 10);
}

.weui-search-bar__cancel-btn {
  color: white;
}

.weui-search-bar__label {
  text-align: center;
}

.weui-icon-search {
  position: relative;
  left: 0;
}

.weui-search-bar__form {
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 2px;
}

.weui-search-bar__input {
  color: #d97f0a;
}

/*===============
    底部tab
  ===============*/

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background: white;
  border-top: 1px solid #f1ece7;
  max-height: 3rem;
}

.bottom navigator, .bottom button{
  position: static;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  padding: 4px 0;
  color: #999;
  line-height: 1.2;
  background-color: white;
}
.bottom button::after{
  display: none;
}
.bottom navigator image, .bottom button image {
  width: 24px;
}

._blank{
  height: 1.1rem;
}
page{
  max-width: 100%;
}

/*=======================
      顶部banner图样式
  =======================*/
.banner image {
  width: 100%;
}

/*========================
        标题样式
  ========================*/
.main-title {
  display: inline-flex;
  position: relative;
  left: 30%;
  /* transform: translateX(-50%); */
  padding: 0 0.5rem;
  margin-top: 1.6rem;
  font-size: 1.6em;
  font-weight: bold;
  line-height: 1.6;
  color: #ff890a;
  /* background: url("//odwbo6hwu.bkt.clouddn.com/title-bg.jpg") no-repeat 0 0 / 100% 100%; */
}

 .main-title .top{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  display: block;
  background: #ff890a;
}

 .main-title .top::before{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  top: 0;
  left: 0;
   transform: translateY(-30%); 
  display: block;
} 

 .main-title .top::after{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  top: 0;
  right: 0;
   transform: translateY(-30%); 
  display: block;
} 

.main-title .bottom{
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  display: block;
  background: #ff890a;
}

 .main-title .bottom::before{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
   transform: translateY(30%); 
  display: block;
} 

 .main-title .bottom::after{
  width: 3px;
  height: 3px;
  background: #ff890a;
  border-radius: 10px;
  content: "";
  position: absolute;
  bottom: 0;
  right: 0;
   transform: translateY(30%); 
  display: block;
}  


.float_btn{
  position: fixed;
  right: 1%;
  bottom: 25%;
  z-index: 101;

}
.float_btn image{
  width: 48px;
  height: 48px;
}
.float_btn button{
  background: transparent;
}
.float_btn button::after{
  display: none;
}