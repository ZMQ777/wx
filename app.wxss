@import 'static/style/weui.wxss';

page{
    /* background-color: #F8F8F8; */
    background-color: ffffff;
    font-size: 16px;
    min-height: 100%;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.clearfix::after {
  content: "";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

/*搜索框提示词样式*/
.font-color{
  color: #d97f0a;
  font-size: 12px;
}

/*搜索框样式*/
.title-search{
  height: 100%;
  width: 100%;
  background-color: rgb(255,171,10);
  margin-bottom: 0px;
}
.title-search .weui-search-bar{
  background-color: rgb(255,171,10);
  border-top:1rpx solid rgb(255,171,10);
  border-bottom:1rpx solid rgb(255,171,10);
}
.weui-search-bar__cancel-btn{
  color: white;
}
.weui-search-bar__label{
  text-align: center;
}
.weui-icon-search{
  position: relative;
  left: 0;
}
.weui-search-bar__form{
  background-color: rgba(255,255,255,0.7);
  border-radius:2px;

}
.weui-search-bar__input{
  color: #d97f0a;
}